<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:layout_margin="8dp">

    <TextView
            android:text="€"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_exchange_currencyTo" app:layout_constraintStart_toEndOf="@+id/textView6"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView6"/>
    <TextView
            android:text="100.11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_exchange_amountTo" app:layout_constraintStart_toEndOf="@+id/tv_exchange_currencyTo"
            android:layout_marginLeft="4dp" android:layout_marginStart="4dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_exchange_currencyTo"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="1"
              android:id="@+id/tv_transactionId"
              app:layout_constraintStart_toEndOf="@+id/textView7" android:layout_marginLeft="8dp"
              android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/textView7"/>
    <TextView
            android:text="€"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_exchange_currencyFrom"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView11"
            app:layout_constraintStart_toEndOf="@+id/textView11" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="100.11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_exchange_amountFrom" app:layout_constraintStart_toEndOf="@+id/tv_exchange_currencyFrom"
            android:layout_marginLeft="4dp" android:layout_marginStart="4dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_exchange_currencyFrom"/>
    <TextView
            android:text="to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" app:layout_constraintStart_toEndOf="@+id/tv_exchange_amountFrom"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_exchange_amountFrom"/>
    <TextView
            android:text="Transaction ID:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp" android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Applied fees:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" app:layout_constraintStart_toStartOf="@+id/textView7"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/textView11"/>
    <TextView
            android:text="€"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_exchange_currencyFee" app:layout_constraintStart_toEndOf="@+id/textView8"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView8"/>
    <TextView
            android:text="0.7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_exchange_amountFee" app:layout_constraintStart_toEndOf="@+id/tv_exchange_currencyFee"
            android:layout_marginLeft="4dp" android:layout_marginStart="4dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_exchange_currencyFee"/>
    <TextView
            android:text="Exchanged:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView11" app:layout_constraintStart_toStartOf="@+id/textView7"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintEnd_toEndOf="@+id/textView8"
    />

</androidx.constraintlayout.widget.ConstraintLayout>